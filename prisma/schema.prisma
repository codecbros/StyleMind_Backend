generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  firstName String @db.VarChar(255) @map("first_name")
  lastName  String @db.VarChar(255) @map("last_name")
  status Boolean @default(true)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime @default(now()) @map("updated_at") @db.Timestamptz() @updatedAt
  description String? @db.Text
  width Int? @db.Integer
  height Int? @db.Integer
}
